<div class="m-3">
<h1>New game</h1>
<% @letters.each do |letter| %>
<p class="d-inline-block bg-primary text-white p-3 rounded-2 fw-bold"><%= letter %></p>
<% end %>
<p>Whats is the longest word you can find?</p>
<form action="/score" method="get" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="input-group">
    <input type="text" class="form-control" name="game" placeholder="Type your word here">
  <div class="input-group-append">
    <input type="submit" class="btn btn-secondary" value="Play!">
</div></div>
</form>
</div>
